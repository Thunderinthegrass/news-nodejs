<!doctype html>
<html lang="en">
<%- include('./partials/head.ejs')%>
<body class="posts-body">
  <div class="container">
    <%- include('./partials/nav.ejs')%>
    <h1>Posts</h1>
    <ul>
      <% if (posts.length) { %>
        <% posts.forEach(({ id, text, title, date, author }) => { %>
          <li>
            <article>
              <h2>
                <a href="/posts/<%= id %>"><%= title %></a>
              </h2>
              <p class="post-text">
                <%= text %>
              </p>
              <span class="post-date"><%= date %></span>
              <span class="post-author"><%= author %></span>
            </article>
          </li>
        <% }) %>
      <% } %>
    </ul>
  </div>
</body>
</html>
